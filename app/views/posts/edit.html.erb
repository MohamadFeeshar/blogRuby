<h1>Edit Post</h1>
<% if @post.errors.any? %>
    <div class="alert alert-danger">
        <%@post.errors.full_messages.each do |msg|%>
        <li>
            <%= msg %>
        </li>
        <%end%>
    </div>
<% end %>
<%= form_for @post do |f| %>

    <div class="form-group">
        <%= label_tag(:title, "Title:") %>
        <%= f.text_field(:title, placeholder: "Post Title...", class: "form-control") %>
    </div>
    <div class="form-group">
        <%= label_tag(:content, "Content:") %>
        <%= f.text_area(:content, size: "24x6", placeholder: "Post Content...", class: "form-control") %>
        
    </div>
    <div class="form-group">
        <%= submit_tag("Edit", class: "btn btn-lg btn-dark float-right") %>
        <%= link_to 'back', :posts,  class: "btn btn-lg btn-info"%>
    </div>
<% end %>